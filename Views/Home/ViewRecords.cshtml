@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model BYUEgyptIntex2.Models.ViewModels.ViewRecordViewModel



<br /> <br /><br />

    <div class=" container text-center">
        <div>
            <h1>This is the view records page</h1>
        </div>
        <table class="table table-dark table-striped ">
            <thead>
                <tr>
                    <th>MummyID</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Body Part</th>
                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("User"))
                    {
                        <th>Edit</th>
                    }
                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                    {
                        <th>Edit</th>
                        <th>Delete</th>
                    }


            </thead>
            <tbody>


                @foreach (var x in Model.Mummy)

                {

                    //See the MyMovieSummary file for the partial view
                    <partial name="EntrySummary" model="x" />
                }




            </tbody>

        </table>
        @if (SignInManager.IsSignedIn(User) && User.IsInRole("User") || User.IsInRole("Admin"))
        {
            <div>
                <a class="btn btn-dark" asp-action="AddRecord" method="post">Add A Record</a>
            </div>
        }
        <div>

            <partial name="PaginationSummary" />

        </div>

        </
    </div>
   